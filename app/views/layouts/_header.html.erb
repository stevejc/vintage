<header class="navbar navbar-inverse navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
  		<a class= "brand" href="/">Vintage Finds</a>
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
			<div class="nav-collapse collapse">
			  <ul class="nav">
    				<li><%= link_to "About", about_path %></li>
    				<li><%= render "layouts/item-search" %></li>
  			</ul>	
  			<ul class="nav pull-right">
  			  <% if user_signed_in? %>
  			    <li id="fat-menu" class="dropdown">
      			  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Profile <b class="caret"></b></a>
    			    <ul class="dropdown-menu">
                <li><%= link_to "Your Profile", edit_user_registration_path %></li>
                <li><%= link_to "Your Orders", yourorders_path %></li> 
                <li><%= link_to "Your Favorites", yourfavorites_path %></li> 			    
    			    </ul>
  			    </li>
  			    <% if current_user.shop != nil %>
      			  <li id="fat-menu" class="dropdown">
        			  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Store <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Store", yourshop_path %></li>
                  <li><%= link_to "Items", youritems_path %></li>
                  <li><%= link_to "Orders", yourshoporders_path %></li>
                </ul>
      			  </li>
    			  <% else %>
        			  <li><%= link_to "Create a Store", new_shop_path %></li>
  			    <% end %> 			    
  			    <li><%= link_to "Sign Out", destroy_user_session_path, method: "delete" %></li>
  			  <% else %>
    			  <li><%= link_to "Register", new_user_registration_path %></li>
    			  <li><%= link_to "Sign In", new_user_session_path %></li>
  			  <% end %>	
  			  <% if session[:cart_id] != nil%>			  	
  				  <li><%= link_to (content_tag(:i, "", :class=>"icon-shopping-cart")) + " Cart", yourcart_path %></li>
				  <% end %>
  			</ul>
			</div>
		</div>
	</div>
</header>