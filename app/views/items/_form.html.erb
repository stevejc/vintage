<%= form_for(@item) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title %>
  <%= f.text_field :title, autofocus: true %>
  
  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :price %>
  <%= f.text_field :price %>
   
  <%= f.label :quantity %>
  <%= f.text_field :quantity %><br>
  
  
  <div class="form-actions">    
    <% if params[:action] == "edit" %>
      <%= f.submit "Save changes", class: "btn btn-warning something", id:"button something" %>
    <% else %>
      <%= f.submit "Add Item", class: "btn btn-warning" %>
    <% end %>
    <%= link_to 'Cancel', :back, :class => 'btn' %>
  </div>
  
<% end %>